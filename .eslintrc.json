{
    // указываеv, для какой среды выполнения предназначен код (браузер, ES2021, Jest)
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },

    // указываеv, какой набор правил должен использоваться при линтинге
    "extends": "airbnb-base",

    // настраиваем правила для конкретных файлов или директорий
    "overrides": [
    ],

    // указываем, какой синтаксис должен использоваться при парсинге кода (в данном случае - последняя версия ECMAScript и модули)
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    // перечисляем правила линтера и их значения
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement", // запрещены метки для операторов цикла
            "WithStatement" // запрещены операторы With
        ],
        "no-console": 0 // использование console разрешено
    }
}